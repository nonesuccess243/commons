<configuration scan="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%logger{72}] - %msg
				[%caller{1}]
			</pattern>
		</encoder>
	</appender>

	

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>

	

</configuration>