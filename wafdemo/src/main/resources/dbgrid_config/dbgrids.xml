<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE DBGrids SYSTEM "dbgrid.dtd" >

<DBGrids>
	
	<!-- YWAF相关 -->
	<DBType>
		<param>MYSQL</param>
	</DBType>
	<!-- </>sender_id,send_date,is_system, ,content,remark,state -->
	<!-- 查询消息 -->
       <DBGrid>
       	<grid-name>/public/demodbgrid/demo</grid-name>
			<grid-table>
			    DEMO_MODEL
			</grid-table>
			<grid-cols>
				ID, NAME, COUNT, CURRENT_DATE, CURRENT_TIME
			</grid-cols>
			<grid-label>
			   	id, 名称,数量,当前日期$d,当前时间$t
			</grid-label>
			<grid-fields>
			   	id, name, count, current_date, current_time
			</grid-fields>
			<grid-orderBy>
			    id
			</grid-orderBy>
			<grid-rowsPerPage>20</grid-rowsPerPage>
       </DBGrid>
</DBGrids> 
