	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.younker.waf.utils.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>JsonDBGridServlet</servlet-name>
		<servlet-class>com.younker.waf.dbgrid.JsonDBGridServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>JsonDBGridServlet</servlet-name>
		<url-pattern>*.jsonlist</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>JsonDBGridServlet</servlet-name>
		<url-pattern>*.jsonmeta</url-pattern>
	</servlet-mapping>

</web-app>
